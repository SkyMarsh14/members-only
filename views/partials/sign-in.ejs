<h1 class="center">Sign in</h1>
<% if(locals.errors){ %> <% for(let i=0;i<errors.length; i++) {%>
  <li class="sign-in-error"><%=errors.pop() %></li>
  <% } %> <% } %>

  <form action="/sign-in" method="post" class="log-in-form">
    <div class="username">
      <label for="username">Username</label>
      <input
        type="text"
        name="username"
        id="username"
        required
        minlength="3"
        maxlenght="30"
      />
    </div>
    <div class="password">
      <label for="password">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        required
        minlength="3"
        maxlength="20"
      />
    </div>
    <button type="submit" class="submit-btn">Sign in</button>
  </form>
</errors.length;>
