<form action="/posts" method="post">
  <div class="title">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" />
  </div>
  <div class="message">
    <label for="message"> Message </label>
    <textarea name="message" id="message"></textarea>
  </div>
  <button type="submit">Post</button>
</form>
