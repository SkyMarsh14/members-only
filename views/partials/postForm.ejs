<form action="/posts" method="post" class="post-form">
  <div class="title">
    <label for="title">Title</label>
    <input
      type="text"
      placeholder="Title..."
      name="title"
      id="title"
      minlength="3"
      maxlength="20"
      required
    />
  </div>
  <div class="message">
    <label for="message"> Message </label>
    <textarea
      name="message"
      rows="5"
      cols="33"
      id="message"
      required
      autocomplete="on"
      autocorrect="on"
      minlength="10"
      maxlength="100"
      placeholder="What's happening?"
    ></textarea>
  </div>
  <div class="form-btn-container">
    <button class="post-btn round-btn" type="submit">Post</button>
    <button type="button" class="clear-btn round-btn">Clear</button>
  </div>
</form>
