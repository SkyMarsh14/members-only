<h1 class="center">Sign up</h1>
<% if(locals.errors){ %>
  <ul>
    <% errors.forEach((error)=>{ %>
      <li><%=error.msg %></li>
    <% }) %>
  </ul>
  <% } %>
<form action="/sign-up" method="post" class="log-in-form">
  <div class="firstName">
    <label for="firstName">First Name: </label>
    <input
      type="text"
      id="firstName"
      name="firstName"
      minlength=<%=nameLength.min %>
    maxlength=<%=nameLength.max%> required/>
  </div>
  <div class="lastName">
    <label for="lastName">Last Name: </label>
    <input type="text" id="lastName" name="lastName" minlength=<%=nameLength.min %>
    maxlength=<%=nameLength.max%> required />
  </div>
  <div class="username">
    <label for="username">Username</label>
    <input type="text" id="username" name="username" required/>
  </div>
  <div class="password">
    <label for="password">Password</label>
    <input type="password" id="password" name="password" minlength="3" maxlength="20" required />
  </div>
  <div class="confirm-password">
    <label for="confirm-password">Confirm Password</label>
    <input type="password" id="confirm-password" name="confirmPassword" minlength="3" maxlength="20" required/>
  </div>
  <div class="admin">
    <input type="checkbox" name='isAdmin' id="isAdmin">
    <label for="isAdmin">Is Admin (optional) </label>
  </div>
  <button type="submit" class="submit-btn round-btn">Register</button>
</form>
